            <i class="glyphicon glyphicon-chevron-up"></i>
          <% end %>
          <%= link_to move_down_projects_participant_path(participant), method: :post, class: 'btn btn-sm btn-default' do %>
          <i class="glyphicon glyphicon-chevron-down"></i>
          <% end %>
