<%= form_for @participant, url: (action_name == 'new' ? projects_participants_path : projects_participant_path(@participant)) do |f| %>
	<div class="field">
		<%= f.label :full_name %>
		<%= f.text_field :full_name, required: true %>
	</div>
	<hr>
	<%= f.submit "#{ action_name == 'new' ? 'Add' : 'Update'  }", class: 'ui button large green floated right' %>
<% end %>